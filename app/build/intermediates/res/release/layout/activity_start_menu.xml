<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/logo_black"
        android:src="@drawable/menu_black" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/vs_ai"
        android:onClick="Choice"
        android:clickable="true"
        style="@style/main_menu"   />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="@string/vs_player" 
        android:onClick="Choice"
        android:clickable="true"
        style="@style/main_menu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/main_menu"
        android:text="@string/options"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:clickable="true"
        android:onClick="Choice"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView4"
        style="@style/main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="Choice"
        android:text="@string/how_to" />

    <TextView
        android:id="@+id/textView5"
        style="@style/main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="Choice"
        android:text="@string/exit" />


</RelativeLayout><!-- From: file:/E:/Projects/PaperRockSpock/app/src/main/res/layout/activity_start_menu.xml -->